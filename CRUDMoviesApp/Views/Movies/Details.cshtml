@model Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="row mt-60-px">
    <div class="col-md-4">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Title"/>
    </div>
    <div class="col-md-8">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.Title</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted"> @Model.Rate.ToString("0.0")</span>
            </span>
        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>
        <span class="text-muted">
            <i class="bi bi-film"></i>
            @Model.Genre.Name
        </span>
        <p class="text-justify mt-3">@Model.Storyline</p>
        <a asp-action="Index" class="btn btn-primary" style="position:absolute;bottom:2px;right:2px;">Back To list</a>

    </div>
</div>
